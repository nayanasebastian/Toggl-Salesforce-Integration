<apex:page showHeader="true" sidebar="true" controller="TGNS_TogglSetupController">
    <apex:form >
    <apex:sectionHeader title="Toggl Salesforce Sync" subtitle="Setup"/>
    <apex:pageBlock >
        <apex:pageBlockButtons >
            <apex:commandButton value="Update Credentials" action="{!save}"/>
        </apex:pageBlockButtons>
        <apex:pageBlockSection columns="1">
            <apex:inputField value="{!config.API_Token__c}"/>
            <apex:inputField value="{!config.Workspace_ID__c}"/>
        </apex:pageBlockSection>
    </apex:pageBlock>
    </apex:form>
</apex:page>